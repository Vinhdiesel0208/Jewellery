@model Lib.Contact

@{
    ViewData["Title"] = "Contact Details";
    Layout = "_BackendLayout";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">Contact Details</h5>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Name:</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <th>Address:</th>
                                <td>@Model.Address</td>
                            </tr>
                            <tr>
                                <th>Message:</th>
                                <td>@Model.Message</td>
                            </tr>
                            <tr>
                                <th>Date Sent:</th>
                                <td>@Model.DateSent.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                        </tbody>
                    </table>
                    <a class="btn btn-primary" asp-action="SendResponseEmail" asp-route-id="@Model.Id">Send Response Email</a>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<Lib.Contact>

@{
    ViewData["Title"] = "Contact List";
    Layout = "_BackendLayout";
    int i = 1;
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <!-- Change this content if you need to modify -->
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Contact List</h5>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Message</th>
                                <th>Date Sent</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr class="text-center">
                                    <td>@contact.Name</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.Phone</td>
                                    <td>@contact.Address</td>
                                    <td>@contact.Message</td>
                                    <td>@contact.DateSent.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="SendResponseEmail" asp-controller="Contact" asp-route-id="@contact.Id">Send Response Email</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- End change -->

    </div>
</div>

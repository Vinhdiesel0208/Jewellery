@model Lib.ProdMst

@{
    ViewData["Title"] = "Create";
    Layout = "_BackendLayout";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">Create New Product</h5>
                    <div class="card">
                        <div class="card-body">

                            @if (!string.IsNullOrEmpty(TempData["msg"] as string))
                            {
                                <div class="alert alert-success">
                                    @TempData["msg"]
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(TempData["errmsg"] as string))
                            {
                                <div class="alert alert-danger">
                                    @TempData["errmsg"]
                                </div>
                            }
                            <form asp-action="Create" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="mb-3">
                                    <label asp-for="Prod_ID" class="form-label">Product ID</label>
                                    <input asp-for="Prod_ID" class="form-control" />
                                    <span asp-validation-for="Prod_ID" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Prod_Name" class="form-label">Product Name</label>
                                    <input asp-for="Prod_Name" class="form-control" />
                                    <span asp-validation-for="Prod_Name" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Type_Id" class="form-label">Type</label>
                                    <select asp-for="Type_Id" asp-items="@(new SelectList(ViewBag.Types, "Type_Id", "Type_Name"))" class="form-control">
                                        <option value="">-- Select Type --</option>
                                    </select>
                                    <span asp-validation-for="Type_Id" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Cat_ID" class="form-label">Category</label>
                                    <select asp-for="Cat_ID" asp-items="@(new SelectList(ViewBag.Categories, "Cat_ID", "Cat_Name"))" class="form-control">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="Cat_ID" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Brand_ID" class="form-label">Brand</label>
                                    <select asp-for="Brand_ID" asp-items="@(new SelectList(ViewBag.Brands, "Brand_ID", "Brand_Name"))" class="form-control">
                                        <option value="">-- Select Brand --</option>
                                    </select>
                                    <span asp-validation-for="Brand_ID" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Price</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Image_id" class="form-label">Images</label>
                                    <input asp-for="Image_id" type="file" class="form-control" multiple />
                                    <span asp-validation-for="Image_id" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Detail" class="form-label">Detail</label>
                                    <textarea asp-for="Detail" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Detail" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Weight" class="form-label">Weight</label>
                                    <input asp-for="Weight" class="form-control" />
                                    <span asp-validation-for="Weight" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label">Quantity</label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger form-text"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Gender_Id" class="form-label">Gender</label>
                                    <select asp-for="Gender_Id" asp-items="@(new SelectList(ViewBag.Genders, "Gender_Id", "Gender_Name"))" class="form-control">
                                        <option value="">-- Select Gender --</option>
                                    </select>
                                    <span asp-validation-for="Gender_Id" class="text-danger form-text"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-primary" asp-action="Index">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
